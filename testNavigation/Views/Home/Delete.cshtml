@model testNavigation.Models.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Está seguro que desea eliminar el usuario?</h3>
<hr />

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Delete" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label class="form-label" asp-for="Name">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Name" type="text" disabled/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="LastName">Apellido</label>
                <input class="form-control form-control-sm" asp-for="LastName" type="text" disabled/>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdActive">Status</label>
                <input class="form-control form-control-sm" asp-for="IdActiveNavigation.Status" type="text" disabled/>
            </div>

            <div class="mb-3">
                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                <a class="btn btn-warning btn-sm" asp-action="List" asp-controller="Home">Back</a>
            </div>

        </form>
    </div>
</div>